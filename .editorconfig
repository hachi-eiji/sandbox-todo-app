root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{java,xml}]
indent_size = 4

[*.{rb,erb}]
indent_size = 2

[*.{html,js,css,jsx}]
indent_size = 2

[*.{json,yml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
